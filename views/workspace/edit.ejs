<!doctype html>
<html lang="en">
<head>
    <title>Edit Workspace | Coworking</title>
    <%- include('../partials/head'); %>
</head>
<body class="bg-gray-50">
<nav>
    <%- include('../partials/nav'); %>
</nav>

<div class="flex flex-col max-w-7xl px-6 lg:px-0 mx-auto h-full mt-6 items-center justify-center">
    <div class="w-full lg:w-1/3">
        <h1 class="text-3xl font-semibold">Edit Workspace</h1>
        <form class="p-4 bg-gray-100 border border-gray-300 shadow-lg rounded-lg mt-4" action="/owner/workspace/<%= workspace.id %>/edit" method="POST">
            <label class="mt-4 block" for="type">Type</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="type" id="type" value="<%= workspace.type %>" required>
            <label class="mt-4 block" for="location">Location (Indoor or Outdoor)</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="location" id="location" value="<%= workspace.location %>" required>
            <label class="mt-4 block" for="seats">Seats</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="seats" id="seats" value="<%= workspace.seats %>" required>
            <label class="mt-4 block">Smoking Allowed:</label>
            <input class="mt-2" type="radio" name="smoking" id="smoking_yes" value="yes" <% if(workspace.smoking === 'yes') { %> <%= "checked" %> <% } %> >
            <label class="text-sm font-semibold" for="smoking_yes">Yes</label>
            <input class="ml-6" type="radio" name="smoking" id="smoking_no" value="no" <% if(workspace.smoking === 'no') { %> <%= "checked" %> <% } %> >
            <label class="text-sm font-semibold" for="smoking_no">No</label>
            <label class="mt-4 block" for="availability">Availability Date (YYYY-MM-DD)</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="availability" id="availability" value="<%= workspace.availability %>" required>
            <label class="mt-4 block" for="term">Term (Daily/Weekly/Monthly)</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="term" id="term" value="<%= workspace.term %>" required>
            <label class="mt-4 block" for="price">Price</label>
            <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="price" id="price" value="<%= workspace.price %>" required>
            <div class="mt-4">
                <input class="text-white bg-green-700 hover:bg-green-800 py-2 px-4 rounded-lg font-semibold" type="submit" value="Update">
                <input class="text-red-800 bg-gray-200 ml-3 hover:bg-gray-300 py-2 px-4 rounded-lg font-semibold" type="reset">
            </div>
        </form>
    </div>
</div>

<footer>
    <%- include('../partials/footer') %>
</footer>
</body>
</html>