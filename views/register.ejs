<!doctype html>
<html lang="en">
<head>
    <title>Register | Coworking</title>
    <%- include('partials/head'); %>
</head>
<body class="bg-gray-50">
    <nav>
        <%- include('partials/nav'); %>
    </nav>

    <div class="flex flex-col max-w-7xl px-6 lg:px-0 mx-auto h-full mt-6 items-center justify-center" style="height: 80vh;">
        <div class="w-full lg:w-1/3">
            <h1 class="text-3xl font-semibold">Register</h1>
            <form class="p-4 bg-gray-100 border border-gray-300 shadow-lg rounded-lg mt-4" action="/register" method="POST">
                <label class="block" for="email">Email</label>
                <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="email" name="email" id="email" required>
                <% if(existingUserError) { %>
                    <p class="text-xs text-red-800 font-semibold"><%= existingUserError %></p>
                <% } %>
                <label class="mt-4 block" for="password">Password</label>
                <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="password" name="password" id="password" required>
                <label class="mt-4 block" for="name">Name</label>
                <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="name" id="name" required>
                <label class="mt-4 block" for="phone">Phone</label>
                <input class="border border-gray-300 rounded w-full mt-2 px-2 py-1" type="text" name="phone" id="phone" required>
                <label class="mt-4 block">Register as:</label>
                <input class="mt-2" type="radio" name="role" id="owner" value="owner" checked>
                <label class="text-sm font-semibold" for="owner">Owner</label>
                <input class="ml-6" type="radio" name="role" id="coworker" value="coworker">
                <label class="text-sm font-semibold" for="coworker">Coworker</label>
                <div class="mt-4">
                    <input class="text-white bg-green-700 hover:bg-green-800 py-2 px-4 rounded-lg font-semibold" type="submit">
                    <input class="text-red-800 bg-gray-200 ml-3 hover:bg-gray-300 py-2 px-4 rounded-lg font-semibold" type="reset">
                </div>
            </form>
        </div>
    </div>

    <footer>
        <%- include('partials/footer') %>
    </footer>
</body>
</html>